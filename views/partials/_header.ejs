<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">All URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="d-inline-flex">
        <% if (user) { %>

        <p class="text-light mr-3 my-auto"><%= user.email %></p>
        <form class="form-inline" action="/logout" method="POST">
          <button type="submit" class="btn btn-primary ml-auto">Log Out</button>
        </form>

        <% } else { %>

        <a class="btn btn-secondary mr-2" role="button" href="/login">Log In</a>
        <a class="btn btn-secondary" role="button" href="/register">Register</a>

        <% } %>
      </div>
    </div>
  </nav>
</header>
